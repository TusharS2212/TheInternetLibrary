@model IList<LibraryManagement.Models.RoleViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User : @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">

                    @Html.HiddenFor(model => Model[i].Id)
                    @Html.HiddenFor(model => Model[i].Name)
                    @Html.CheckBoxFor(m => Model[i].Selected, Model[i].Selected)

                    @Model[i].Name

                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a href="~/UserRoles" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
}