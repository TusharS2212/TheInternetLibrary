@model IEnumerable<LibraryManagement.Models.BooksModels>

@{
    ViewBag.Title = "ViewBooks";
}
<html>

<head>

    <link rel="stylesheet" href="~/slick/slick.css" />
    <link rel="stylesheet" href="~/slick/slick-theme.css" />
    <style>
        .slick-prev, .slick-prev:hover, .slick-prev:focus, .slick-next, .slick-next:focus, .slick-next:hover {
            width: 20px;
            height: 20px;
        }

            .slick-prev:before, .slick-next:before {
                color: hsl(202, 96%, 37%);
                font-size: 35px;
                opacity: 1;
            }

        .book-image {
            display: flex;
            justify-content: center;
        }

        img {
            max-width: 100%;
            height: 200px;
        }
        .book-name{
            display:flex;
            justify-content:center;
            height:50px;
        }
        .book-name, .book-price {
            max-height:50px;
            overflow:hidden;
            border: 1px solid green;
            padding: 4px;
            text-align: center;
            margin: 8px 0 0 0;
        }

        .book-item {
            margin: 2px;
            height: 300px;
        }

        .carousel {
            display: block;
            overflow: visible;
            margin: 5px;
            max-width: 850px;
        }

        body {
            margin-left: auto;
            margin-right: auto;
            width: 900px;
            overflow: visible;
        }
    </style>
</head>

<body>

    <section class="bookscontainer carousel">
        @if (@Model != null)
            {

                foreach (var item in Model)
                {

                    <div class="book-item slick-slide">

                        <div class="book-image"><a href="@Url.Action("BookDetails",new { id = item.Id })"><img src="@Html.DisplayFor(modelItem => item.BookImage)" /></a></div>

                        <div class="book-name">@Html.DisplayFor(modelItem => item.BookName)</div>

                        <div class="book-price">Price:  @Html.DisplayFor(modelItem => item.Cost)</div>

                    </div>
                }
            }

       
    </section>

    @section scripts{
        <script>
            $(function () {
                $('.bookscontainer').slick({
                    slidesToShow: 5,
                    slidesToScroll: 3,
                    infinite: false,
                    arrows: true,
                    prevArrow: "<button type='button' class='slick-prev pull-left'><i class='fa fa-angle-left' aria-hidden='true'></i></button>",
                    nextArrow: "<button type='button' class='slick-next pull-right'><i class='fa fa-angle-right' aria-hidden='true'></i></button>"
                });
            });
        </script>
        <script type="text/javascript" src="/Scripts/jquery-3.4.1.min.js"></script>

        <script type="text/javascript" src="/slick/slick.min.js"></script>
    }
</body>

</html>