@model LibraryManagement.Models.IndexViewModel
  
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Manage Account";
}
<style>
    .Edituserform{
        margin-top:14px;
        border: 2px solid black;
        padding:0 1px 0 1px;
    }
</style>
<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal bg-info">
        <dt>Name:</dt>
        <dd>
            @Model.FirstName @Model.LastName
        </dd>
        <dt>Email:</dt>
        <dd>
            @Model.Email
        </dd>
        <dt>UserName:</dt>
        <dd>
            @Model.UserName
        </dd>
        <dt>Phone:</dt>
        <dd>
            @Model.PhoneNumber
            @if (Model.PhoneNumber != null)
            {
                @Html.ActionLink("Verify Phone Number", "VerifyPhoneNumber")
            }
        </dd>
        <dt>Address:</dt>
        <dd>
            @Model.Address

        </dd>
        <dt>Password:</dt>
        <dd>



            @if (Model.HasPassword)
            {
                var emailid = Model.Email;
                @Html.ActionLink("Change your password", "ChangePassword")

            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }


        </dd>
        <dt>External Logins:</dt>
        <dd>

            @Model.Logins.Count
        </dd>
        <dt>

            @Html.ActionLink("Edit your details", "EditUser", "ManageController", new { id = Model.FirstName })

        </dt>
        <dd></dd>
